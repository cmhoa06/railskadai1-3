<h3>スケジュール新規作成</h3>

<%= render "shared/error", obj: @task %>
<%= form_with model: @task  do |f| %>
<table>
    <tr>
        <th><%= f.label :content ,"タイトル" %></th>
        <td><%= f.text_field :content %></td>
    </tr><br>
    
    <tr>
        <th><%= f.label :start_at ,"開始日" %></th>
        <td><%= f.date_field :start_at %></td>
    </tr><br>

    <tr>
        <th><%= f.label :end_at ,"終了日" %></th>
        <td><%= f.date_field :end_at %></td>
    </tr><br>

    <tr>
        <th><%= f.label :is_all_day ,"終日" %></th>
        <td><%= f.check_box :is_all_day, checked: false %>
        <br>終日の場合はチェックを入れます<br>
        </td>
    </tr><br>

    <tr>
        <th><%= f.label :memo ,"メモ" %></th>
        <td><%= f.text_area :memo %></td>
    </tr><br>

    <div>
        <ul>
            <li><%= f.submit "スケジュールの編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", tasks_path %></li>
        </ul>
    </div>
</table>
<% end %>